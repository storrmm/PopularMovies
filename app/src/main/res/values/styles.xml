<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorLink">@color/accent</item>
    </style>

    <style name="CustomRootLayout" parent="CustomMatchParentView">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="CustomGridView" parent="CustomMatchParentView">
        <item name="android:columnWidth">90dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">2dp</item>
        <item name="android:horizontalSpacing">2dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CustomCenterImageView" parent="CustomMatchParentView">
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CustomLargeBoldTextView" parent="CustomWrapContentView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="CustomRatingTextView" parent="CustomWrapContentView">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="CustomMediumTextView" parent="CustomWrapContentView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="CustomSmallTextView" parent="CustomWrapContentView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="CustomMediumItalicTextView" parent="CustomMediumTextView">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomMediumBoldTextView" parent="CustomMediumTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSmallBoldTextView" parent="CustomSmallTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomWrapContentView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomMatchParentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomNonScrollListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomImageButton" parent="CustomWrapContentView">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomDetailImageView" parent="CustomWrapContentView">
        <item name="android:scaleType">fitStart</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


</resources>
